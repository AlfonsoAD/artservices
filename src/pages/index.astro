const seoTitle = 'ART Services';
const seoDescription =
    'Empresa especializada en maquinados de alta precisión, servicios industriales y soluciones de IT a la medida para optimizar tus procesos y proyectos.';

const heroContent = {
    title: 'Maquinados, Servicios Industriales e IT a la Medida',
    description:
        'Fundada en 2023, somos especialistas en servicios industriales como soldadura, maquinados, diseño, integraciones, soporte informático y más. Trabajamos con materiales de alta calidad como Nylamid, Bronce, Acero 4140, Acero D2/A2, Inoxidable y Delrin, ofreciendo desde piezas especializadas hasta estaciones de trabajo completas.',
    buttons: [
        {
            text: 'Contáctanos',
            link: '/contact',
            target: '_self',
        },
    ],
    backgroundImage: heroImage,
    overlayOpacity: 0.5,
};

const offerSection = {
    eyebrow: 'NUESTROS SERVICIOS',
    title: 'Soluciones Industriales y Tecnológicas a tu Medida',
    description:
        'Ofrecemos soluciones especializadas que se adaptan a las necesidades específicas de cada empresa. Desde maquinados de alta precisión hasta soporte técnico de IT, nuestro compromiso es impulsar tu productividad con servicios de calidad, confiabilidad y eficiencia.',
    features: featureLists.main.features,
};

const plotServices = {
    eyebrow: 'Servicios de Maquinado',
    headline: 'Especialistas en Materiales Industriales',
    subheadline: 'Precisión y calidad garantizada',
    description:
        'Realizamos todo tipo de trabajos en diferentes materiales industriales, con la máxima precisión y tiempos de entrega competitivos.',
    materialList: ['Nylamid', 'Bronce', 'Acero 4140', 'Acero D2 / A2', 'Inoxidable', 'Delrin'],
    images: [
        { src: nylamid, alt: 'Maquinado Nylamid', colSpan: 1, rowSpan: 1 },
        { src: bronce, alt: 'Maquinado Bronce', colSpan: 1, rowSpan: 1 },
        { src: acero4140, alt: 'Maquinado acero 4140', colSpan: 2, rowSpan: 1 },
        { src: aceroD2A2, alt: 'Maquinado acero d2a2', colSpan: 1, rowSpan: 2 },
        { src: aceroInox, alt: 'Maquinado acero inoxidable', colSpan: 2, rowSpan: 1 },
        { src: delrin, alt: 'Maquinado delrin', colSpan: 1, rowSpan: 1 },
    ],
    buttons: [
        {
            text: 'Solicitar Cotización',
            link: '/contact',
            variant: 'primary' as 'primary' | 'secondary' | 'ghostLight' | 'ghostDark',
        },
    ],
};

const designServices = {
    eyebrow: 'Servicios Especializados',
    headline: 'Desarrollo y Fabricación de Soluciones Funcionales',
    subheadline: 'Innovación, calidad y precisión en cada proyecto',
    description:
        'Ofrecemos el diseño y fabricación de estaciones de trabajo, estructuras de soporte, piezas especializadas y pruebas funcionales para asegurar el rendimiento y la eficiencia de tus procesos industriales. Nos adaptamos a tus requerimientos técnicos y productivos, garantizando soluciones a medida con los más altos estándares de calidad.',
    serviceList: ['Pruebas funcionales', 'Estaciones de trabajo', 'Piezas especializadas', 'Estructuras de soporte'],
    images: [
        { src: img1, alt: 'Pruebas funcionales', colSpan: 2, rowSpan: 2 },
        { src: img2, alt: 'Estaciones de trabajo', colSpan: 1, rowSpan: 1 },
        { src: img3, alt: 'Piezas especializadas', colSpan: 2, rowSpan: 1 },
        { src: img4, alt: 'Estructuras de soporte', colSpan: 1, rowSpan: 2 },
        { src: img5, alt: 'Otros', colSpan: 2, rowSpan: 1 },
    ],
    buttons: [
        {
            text: 'Solicitar Cotización',
            link: '/contact',
            variant: 'primary' as 'primary' | 'secondary' | 'ghostLight' | 'ghostDark',
        },
    ],
};

const industrialServices = {
    eyebrow: 'Servicios Industriales',
    headline: 'Desarrollo y Fabricación de Soluciones Industriales',
    subheadline: 'Innovación, calidad y precisión en cada proyecto',
    description:
        'Ofrecemos el diseño y fabricación de estaciones de trabajo, estructuras de soporte, carros de almacenamiento y transporte, mesas de inspección, así como soluciones en estructuras de perfil de aluminio o PTR. Nos adaptamos a tus requerimientos técnicos y productivos, garantizando soluciones a medida con los más altos estándares de calidad.',
    serviceList: [
        'Carros de almacenamiento y transporte',
        'Estructuras de perfil de aluminio o PTR',
        'Mesas de inspección',
    ],
    images: [
        { src: img6, alt: 'Carros de almacenamiento y transporte', colSpan: 2, rowSpan: 2 },
        { src: img7, alt: 'Estructuras de perfil de aluminio o PTR', colSpan: 1, rowSpan: 1 },
        { src: img8, alt: 'Mesas de inspección', colSpan: 2, rowSpan: 1 },
