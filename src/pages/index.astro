import ignition from '../assets/images/home/ignition.webp';
import keyence from '../assets/images/home/keyence.png';
import rockwell from '../assets/images/home/rockwell-automation.png';
import siemens from '../assets/images/home/siemens.png';
import angular from '../assets/images/home/angular.png';
import astro from '../assets/images/home/astro.png';
import csharp from '../assets/images/home/csharp.webp';
import go from '../assets/images/home/go.png';
import nodejs from '../assets/images/home/nodejs.png';
import postgresql from '../assets/images/home/postgresql.webp';
import python from '../assets/images/home/python.png';
import sqls from '../assets/images/home/sqls.png';
