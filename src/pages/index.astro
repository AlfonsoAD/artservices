    ],
};

const softwareDevelopmentServices = {
    eyebrow: 'Servicios de Desarrollo de Software y Soporte Técnico Informático',
    headline: 'Personalizadas para tu Empresa',
    subheadline: 'Innovación, eficiencia y soporte continuo en cada proyecto con las mejores tecnologías',
    description:
        'Brindamos soluciones a medida para el desarrollo de software, incluyendo páginas web, aplicaciones web, APIs, bases de datos, sistemas de control de inventarios y más. Además, ofrecemos soporte técnico especializado en plataformas como Ignition & PLC, sistemas SCADA, así como mantenimiento preventivo y correctivo de PC y laptops, instalación de programas, impresoras y soporte remoto.',
    serviceList: [
        'Desarrollo de páginas web a la medida',
        'Aplicaciones web',
        'Desarrollo de APIs',
        'Sistemas de control de inventarios a la medida',
        'Integraciones con APIs externas y sistemas solicitados',
        'Desarrollo de base de datos (SQL Server, PostgreSQL y MongoDB)',
        // 'Plataforma Ignition & PLC',
        // 'Sistemas SCADA',
        'Mantenimiento preventivo y correctivo de PC y laptops',
        'Instalación de programas',
        'Instalación de impresoras',
        'Soporte remoto',
    ],
    images: [
        { src: angular, alt: 'Angular', colSpan: 2, rowSpan: 2 },
        { src: astro, alt: 'Astro', colSpan: 1, rowSpan: 1 },
        { src: csharp, alt: 'C#', colSpan: 2, rowSpan: 1 },
        { src: go, alt: 'Go', colSpan: 1, rowSpan: 2 },
        { src: nodejs, alt: 'Node.js', colSpan: 2, rowSpan: 1 },
        { src: postgresql, alt: 'PostgreSQL', colSpan: 1, rowSpan: 1 },
        { src: python, alt: 'Python', colSpan: 2, rowSpan: 1 },
        { src: sqls, alt: 'SQL Server', colSpan: 1, rowSpan: 2 },
        { src: tailwind, alt: 'Tailwind CSS', colSpan: 2, rowSpan: 1 },
        { src: ts, alt: 'TypeScript', colSpan: 1, rowSpan: 1 },
    ],
    buttons: [
        {
            text: 'Solicitar Cotización',
            link: '/contact',
            variant: 'primary' as 'primary' | 'secondary' | 'ghostLight' | 'ghostDark',
        },
    ],
};

const FooterCta = {
    eyebrow: 'Únete a nosotros',
    title: 'Comienza a trabajar con Art Services hoy',
    description: 'Somos una empresa innovadora y en constante crecimiento.',
    hideCta: false,
    button: {
        text: 'Contáctanos',
        link: '/contact',
        target: '_self',
    },
};

const logos: Logo[] = [
    { src: automation, alt: 'Automation', link: '' },
    { src: factoryTalk, alt: 'Factory Talk', link: '' },
    { src: ignition, alt: 'Ignition', link: '' },
    { src: keyence, alt: 'Keyence', link: '' },
    { src: siemens, alt: 'Siemens', link: '' },
    { src: rockwell, alt: 'Rockwell Automation', link: '' },
    // { src: studio5000.src, alt: 'Studio 5000', link: '' },
];
---

<Layout footerCta={FooterCta} title={seoTitle} description={seoDescription}>
    <section id="about">
        <Hero content={heroContent} />
    </section>

    <section id="offer">
        <Features content={offerSection} padding="base" background="light" />
    </section>

    <section id="plot">
        <SplitPanel content={plotServices} imagePosition="left" background="dark" padding="base" />
    </section>

    <section id="design-services">
        <SplitPanel content={designServices} imagePosition="right" background="base" padding="base" />
    </section>

    <section id="industrial-services">
        <SplitPanel content={industrialServices} imagePosition="right" background="dark" padding="base" />
    </section>

    <section id="software-development">
        <SplitPanel
            content={softwareDevelopmentServices}
            imagePosition="right"
            background="base"
            padding="base"
            isDevSection
        />
    </section>

    <Integrations
        content={{
            eyebrow: 'Integraciones',
            title: 'Conecta con tus herramientas favoritas',
            description: 'Nuestra plataforma se integra fácilmente con las principales empresas del sector.',
            logos: logos,
        }}
        background="dark"
    />
</Layout>
